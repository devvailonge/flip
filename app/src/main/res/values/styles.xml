<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/norwester</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">40.5sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <style name="Cloud">
        <item name="android:contentDescription">@string/cloud</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:src">@drawable/cloud_image</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Body" parent="MainText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body.Gray" parent="Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppCompatEditText" parent="TextAppearance.AppCompat">
        <item name="android:paddingStart">0dp</item>
        <item name="android:layout_marginStart">@dimen/size_2</item>
        <item name="android:layout_marginEnd">@dimen/size_2</item>
        <item name="android:layout_marginTop">@dimen/size_2</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Button.Text" parent="MainText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="Button.Text">
        <item name="background">@drawable/flip_button_bg</item>
    </style>

</resources>